<h1>Transactions</h1>
<div class"deals-header">
<h3><%= @category.name %></h3>
<p>$<%= @deals.sum {|deal| deal.amount} %></p>
</div>
<div id="deals">
  <% @deals.each do |deal| %>
    <%= render deal %>
  <% end %>
</div>

<button><%= link_to "Create new transaction", new_category_deal_path %></button>
